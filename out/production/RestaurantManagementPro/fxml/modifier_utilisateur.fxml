<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.restaurant.controller.ModifierUtilisateurController"
      spacing="12"
      style="-fx-padding:20;">

    <Label text="Modifier un utilisateur"
           style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <GridPane hgap="10" vgap="10">

        <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Prénom :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="prenomField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Login :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="loginField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Nouveau mot de passe :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="mdpField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Rôle :" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="roleCombo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Enregistrer" onAction="#handleEnregistrer"/>
        <Button text="Annuler" onAction="#handleAnnuler"/>
    </HBox>

</VBox>
